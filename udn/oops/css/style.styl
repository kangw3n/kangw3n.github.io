$orange = #f66e00
$bg = #e1dec4
$headerBg = #aca885
$chatboxColor = #777034
$chatboxColorGrey = #606060
$footerBg = #4b3f27
$menuBg = #595242
$fontFamily = "微軟正黑體", "Microsoft JhengHei", "LiHei Pro"

*
  box-sizing border-box
  margin 0
  padding 0

body
  overflow-x hidden
  font-family $fontFamily

a
  &:hover
    color $orange

h3
  font-size 22px
  font-size 2.2rem

#ad_1
  iframe
    width 100%

#wrapper
  display block
  overflow hidden

#container
  background $bg

#gotop
  right 18px
  bottom 10px
  cursor pointer
  @media(max-width: 1016px)
    bottom 90px

#mainbar
#sidebar
  margin-top 20px

#mainbar
  @media(max-width: 766px)
    margin-top 0

#video_live ~ #mainbar
#video_live ~ #sidebar
#highchart-vote ~ #mainbar,
#highchart-vote ~ #sidebar
  margin-top 10px

#header
  height 125px
  margin 0 auto
  background $headerBg
  &.active
    .menu
      z-index 20
      transition all .3s ease-in
      box-shadow none
      @media(max-width: 766px)
        background rgba(89, 82, 66, 0.95)
#header_body_wrapper
  height 80px

#video_live
  overflow hidden
  height 490px
  padding 20px
  &.area
    margin 0
    @media(max-width: 766px)
      margin 0 10px
  @media(max-width: 1016px)
    height auto
    padding 20px

#highchart-vote
  &.area
    margin 20px 0 0 0
    @media(max-width: 766px)
      margin 0 10px !important

#footer
  background $footerBg

.fb_iframe_widget
.fb_iframe_widget span
.fb_iframe_widget span iframe[style]
  width 100% !important
  min-width 100% !important

.highchart-container
  width: 100%
  min-height 400px

.sidebar_fix-mid-scroll
  top auto
  bottom 0

.sidebar_fix-bottom-fixed
  position absolute
  bottom 0

.logo
  position absolute
  top 50%
  display block
  height 62px
  transform translateY(-50%)
  background url("/img/logo.png") no-repeat -1px -1px
  &.logo-backudn
    left 0
    width 75px
    background-position left center
  &.logo-voteudn
    left 75px
    width 330px
    background-position -75px center

.video-tube
  display inline-block
  float left
  width 70%
  height 450px
  @media(max-width: 1016px)
    display block
    width 100%
    height 400px
  @media(max-width: 766px)
    height 300px


.video-chat
  display inline-block
  float right
  width 28%
  .chat-send
    display inline-block
    float right
    padding 5px 10px
    cursor pointer
    text-decoration none
    color #fff
    background #575757
    &:hover
      background rgba(87, 87, 87, .63)
    &:active
      position relative
      top 1px
  .chat-box
    height 300px
    padding 5px
    border 1px solid #dbdbdb
    &.tse-scrollable
      width auto
    li
      line-height 1.7
      padding 0 0 2px 5px
      list-style none
    .chatbox-timestamp
      font-size 12px
      font-size 1.2rem
      margin 0 5px
      color #939393
    .from
      font-weight bold
      color #0c00ff
    .message
      padding-left 10px
  .chat-textbox
  .nickname-box
    padding 5px 0
    input.error
    textarea.error
      border 1px solid transparent
      box-shadow 0 0 5px #b21238
  .chat-textbox
    textarea
      box-sizing border-box
      width 100%
      height 60px
      padding 10px
      resize none
      color $chatboxColorGrey
      border none
      background #f0f0f0
      &::-webkit-input-placeholder
        opacity .6
        color $chatboxColorGrey
      &::-moz-placeholder
        opacity .6
        color $chatboxColorGrey
      &:-moz-placeholder
        opacity .6
        color $chatboxColorGrey
      &:ms-input-placeholder
        overflow hidden
        opacity .6
        color $chatboxColorGrey
  .nickname-box
    padding-bottom 0
    input
      box-sizing border-box
      width 100%
      height 35px
      padding 0 10px
      color $chatboxColor
      border none
      background $bg
    input[type="text"]::-webkit-input-placeholder
      opacity .6
      color $chatboxColor
    input[type="text"]::-moz-placeholder
      opacity .6
      color $chatboxColor
    input[type="text"]:-moz-placeholder
      opacity .6
      color $chatboxColor
    input[type="text"]:-ms-input-placeholder
      opacity .6
      color $chatboxColor
    .nickname-placeholer
      display none
      height 30px
      .not-name
        float right
        a
          font-size 10px
          font-size 1rem
          cursor pointer
          color #c1c1c1
          &:hover
            text-decoration underline
            color grey
        .nickname-name
          color #c1c1c1 !important
          font-weight bold
          color red
  @media(max-width: 1016px)
    display block
    width 100%
    margin 10px 0 0 0

.menu
  height 450px
  background $menuBg
  &::-webkit-scrollbar
    display none
  > dl
    height 45px
    padding-top 0
    > dt
      display inline-block
      height 45px
      &:last-child
        > a
          // @extend .menu > dl > dt > a
      > a
        font-size 20px
        font-size 2rem
        height auto
        padding 7px 15px
        letter-spacing 0
        color $bg
        text-shadow none
